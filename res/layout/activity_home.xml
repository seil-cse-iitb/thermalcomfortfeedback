<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="140dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    tools:context="com.example.sid.testu.Home">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Are you feeling comfortable?"

        />
    <RadioGroup
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RadioButton
        android:id="@+id/feeling_yes_rb"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yes"/>


        <RadioButton
            android:id="@+id/feeling_no_rb"
            android:checked="true"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No"/>


    </RadioGroup>


    <TextView
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Preferred"
        />
    <Spinner

        android:layout_weight="1"
        android:id="@+id/preferred_spinner"
        android:layout_width="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content"/>

    <Button
        android:textSize="18sp"
        android:layout_marginBottom="48dp"

        android:id="@+id/form_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"/>


    <Button
        android:textSize="18sp"
        android:id="@+id/previous_responses_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See previous responses"/>

</LinearLayout>
